{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Album</h1>
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8">
                <table class="album_show">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ album.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ album.title }}</td>
                    </tr>
                    <tr>
                        <th>Artiste</th>
                        <td>{{ album.artiste }}</td>
                    </tr>
                    <tr>
                        <th>Genre</th>
                        <td>{{ album.genre }}</td>
                    </tr>
                    <tr>
                        <th>Support</th>
                        <td>{{ album.support }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8">
                <h2> Ils donnent leur avis :</h2>
                {% for comments in comment %}
                    <p>{{ comments.utilisateur }} donne son avis :<br>
                        {{ comments.comment }}<br>
                    </p>
                {% endfor %}
            </div>
            <div class="col-xs-offset-2 col-xs-8">
                <h2>Ajouter un commentaire</h2>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Create" />
                {{ form_end(form) }}

            </div>
        </div>
        <ul>
            <li>
                <a href="{{ path('_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('_edit', { 'id': album.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
